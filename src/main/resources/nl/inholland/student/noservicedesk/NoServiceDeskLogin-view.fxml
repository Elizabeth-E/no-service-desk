<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Email">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets right="300.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="emailTextField" promptText="username...">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin>
            </TextField>
            <Label text="Password">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets right="310.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="passwordTextField" promptText="Password...">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
         </children>
      </VBox>
   </center>
   <top>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="NoServiceDesk: TGG">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label text="Please provide login credentials to login to NoDesk for The Garden Group" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="errorLabel" textFill="#f20000">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="cancel">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets right="20.0" top="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" style="-fx-background-color: DODGERBLUE;" text="login" textFill="WHITE">
               <HBox.margin>
                  <Insets left="20.0" top="20.0" />
               </HBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
