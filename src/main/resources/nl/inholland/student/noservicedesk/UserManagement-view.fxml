<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="viewLayout" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.inholland.student.noservicedesk.Controllers.UserManagementController">
    <top>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="User Management">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <HBox>
                    <children>
                        <TextField promptText="filter by email_address ...">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#onAddUserButtonClick" style="-fx-background-color: DODGERBLUE;" text="Add New User" textFill="WHITE">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="200.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <TableView fx:id="userTableview">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="60" text="ID" />
                        <TableColumn fx:id="firstNameColumn" prefWidth="120" text="First Name" />
                        <TableColumn fx:id="lastNameColumn" prefWidth="120" text="Last Name" />
                        <TableColumn fx:id="emailAddressColumn" prefWidth="200" text="Email" />
                        <TableColumn fx:id="locationColumn" prefWidth="120" text="Location" />
                        <TableColumn fx:id="phoneColumn" prefWidth="120" text="Phone" />
                    </columns>
                </TableView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onDeleteUserButtonClick" style="-fx-background-color: LIGHTPINK;" text="delete user">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onUpdateUserButtonClick" style="-fx-background-color: DODGERBLUE;" text="update user" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
