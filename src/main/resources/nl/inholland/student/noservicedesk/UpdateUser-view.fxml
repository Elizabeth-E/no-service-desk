<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="viewLayout" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.inholland.student.noservicedesk.Controllers.UpdateUserController">
    <top>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="First Name:">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="newUserFirstName">
                            <HBox.margin>
                                <Insets left="50.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="Last Name:">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="newUserLastName">
                            <HBox.margin>
                                <Insets left="50.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="Type of user: ">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="userRoleComboBox" promptText="pick a role">
                            <HBox.margin>
                                <Insets left="35.0" />
                            </HBox.margin></ComboBox>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="Email address:">
                            <font>
                                <Font size="16.0" />
                            </font></Label>
                        <TextField fx:id="newUserEmail">
                            <HBox.margin>
                                <Insets left="35.0" />
                            </HBox.margin></TextField>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="Phone number:">
                            <font>
                                <Font size="16.0" />
                            </font></Label>
                        <TextField fx:id="newUserPhoneNumber">
                            <HBox.margin>
                                <Insets left="30.0" />
                            </HBox.margin></TextField>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="Location/Branch:">
                            <font>
                                <Font size="16.0" />
                            </font></Label>
                        <ComboBox fx:id="userLocationComboBox" prefWidth="150.0" promptText="choose location">
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </ComboBox>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClick" style="-fx-background-color: SALMON;" text="cancel" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin></Button>
                        <Button mnemonicParsing="false" onAction="#onUpdateUserButtonClick" style="-fx-background-color: DODGERBLUE;" text="update user" textFill="WHITE">
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                            <font>
                                <Font size="18.0" />
                            </font></Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
